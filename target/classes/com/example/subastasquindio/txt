import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.Pane;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class AnunciosApp extends Application {

    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("Anuncios");

        Pane root = new Pane();
        Scene scene = new Scene(root, 600, 400);

        // Supongamos que tienes una lista de anuncios
        String[] anuncios = {
            "Carro BMW Modelo 6 serie 333 Color Blanco",
            "Carro Audi Modelo A4 Color Rojo",
            "Carro Mercedes-Benz Modelo C200 Color Plateado"
            // Agrega más anuncios aquí si es necesario
        };

        // Itera sobre la lista de anuncios y crea un widget para cada uno
        double yOffset = 0.0;
        for (String anuncio : anuncios) {
            Pane widget = createAnuncioWidget(anuncio);
            widget.setLayoutY(yOffset);
            root.getChildren().add(widget);
            yOffset += widget.getPrefHeight() + 10; // Espacio entre widgets
        }

        primaryStage.setScene(scene);
        primaryStage.show();
    }

    private Pane createAnuncioWidget(String descripcion) {
        Pane anuncioWidget = new Pane();
        anuncioWidget.setPrefWidth(447.0);
        anuncioWidget.setPrefHeight(208.0);
        anuncioWidget.setStyle("-fx-border-color: #000000;");

        ImageView imageView = new ImageView(new Image("ruta_de_la_imagen")); // Reemplaza "ruta_de_la_imagen" con la ruta de tu imagen
        imageView.setFitWidth(208.0);
        imageView.setFitHeight(91.0);
        imageView.setLayoutX(28.0);
        imageView.setLayoutY(15.0);
        imageView.setPreserveRatio(true);
        anuncioWidget.getChildren().add(imageView);

        Label labelTitulo = new Label("Carro BMW");
        labelTitulo.setLayoutX(280.0);
        labelTitulo.setLayoutY(29.0);
        labelTitulo.setPrefWidth(92.0);
        labelTitulo.setPrefHeight(18.0);
        anuncioWidget.getChildren().add(labelTitulo);

        Text textDescripcion = new Text(descripcion);
        textDescripcion.setLayoutX(27.0);
        textDescripcion.setLayoutY(156.0);
        textDescripcion.setStrokeType(Text.StrokeType.OUTSIDE);
        textDescripcion.setStrokeWidth(0.0);
        textDescripcion.setWrappingWidth(393.9830722808838);
        anuncioWidget.getChildren().add(textDescripcion);

        Label labelDescripcion = new Label("Descripción:");
        labelDescripcion.setLayoutX(28.0);
        labelDescripcion.setLayoutY(124.0);
        labelDescripcion.setPrefWidth(92.0);
        labelDescripcion.setPrefHeight(18.0);
        labelDescripcion.setFont(new javafx.scene.text.Font(16.0));
        anuncioWidget.getChildren().add(labelDescripcion);

        Label labelPrecio = new Label("Precio: $109557332");
        labelPrecio.setLayoutX(253.0);
        labelPrecio.setLayoutY(60.0);
        labelPrecio.setPrefWidth(147.0);
        labelPrecio.setPrefHeight(18.0);
        anuncioWidget.getChildren().add(labelPrecio);

        return anuncioWidget;
    }

    public static void main(String[] args) {
        launch(args);
    }
}